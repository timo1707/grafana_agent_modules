/********************************************
 * ARGUMENTS
 ********************************************/
argument "address" {
	optional = false
}

argument "receiver" {
	optional = false
}

argument "scrape_interval" {
	optional = true
	default  = "10s"
}

/********************************************
 * EXPORTS
 ********************************************/

/********************************************
 * SCRAPE
 ********************************************/
prometheus.scrape "default" {
	targets         = [{"__address__" = argument.address.value}]
	forward_to      = [argument.receiver.value]
	scrape_interval = argument.scrape_interval.value
}